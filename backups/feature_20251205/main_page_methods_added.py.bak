def restart_app(self):
    import subprocess, sys, os
    try:
        cmd = [sys.executable, "-m", "src.main"]
        subprocess.Popen(cmd, cwd=os.path.dirname(os.path.dirname(__file__)))
    except Exception:
        pass
    try:
        self.controller.root.quit()
    except Exception:
        pass

def download_selected_videos(self):
    from .download_options_dialog import DownloadOptionsDialog
    from .download_manager import DownloadManager
    import os
    sel = self.video.video_tree.selection()
    if not sel:
        return
    vids = []
    for iid in sel:
        idx = self.video.video_tree.index(iid)
        if 0 <= idx < len(self.current_videos):
            vids.append(self.current_videos[idx])
    dlg = DownloadOptionsDialog(self)
    if not dlg.result:
        return
    dm = DownloadManager(self, vids, None, dlg.result)
    dm.start()

def download_single_video(self):
    sel = self.video.video_tree.selection()
    if not sel:
        return
    idx = self.video.video_tree.index(sel[0])
    if idx < 0 or idx >= len(self.current_videos):
        return
    v = self.current_videos[idx]
    from .download_options_dialog import DownloadOptionsDialog
    from .download_manager import DownloadManager
    dlg = DownloadOptionsDialog(self)
    if not dlg.result:
        return
    DownloadManager(self, [v], None, dlg.result).start()
